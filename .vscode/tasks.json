{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build COBOL",
            "type": "shell",
            "command": "cobc",
            "args": [
                "-x",
                "-std=cobol85",
                "-g",
                "-I ./copybooks",
                "-debug",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Debug COBOL",
            "type": "shell",
            "command": "cobc",
            "args": [
                "-g",
                "-debug",  // Additional debug info
                "-x",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
