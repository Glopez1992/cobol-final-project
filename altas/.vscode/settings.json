{
    "cobol-lsp.server.extraArgs": ["-std=cobol85"],
    "cobol-lsp.copybookdirs": ["./copybooks"],
    "files.associations": {
        "*.cbl": "cobol",
        "*.cob": "cobol"
    },
     "files.exclude": {
    "*.c": true,
    "*.c.h": true,
    "*.c.l.h": true,
    "*.i": true,
  }
    "files.insertFinalNewline": true,
  "files.trimFinalNewlines": false,
    "code-runner.executorMap": {
        "cobol": "cobc -x $fileName && ./$fileNameWithoutExt"
    }
}
